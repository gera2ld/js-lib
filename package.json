{
  "name": "js-lib",
  "version": "1.0.0",
  "description": "JavaScript utilities for use in the browser, served on IPFS.",
  "type": "module",
  "scripts": {
    "prepare": "husky || true",
    "lint": "tsc",
    "format": "prettier --ignore-path .gitignore --write src",
    "dev": "vite dev",
    "build:browser": "TARGET=browser vite build",
    "build:node": "vite build && node scripts/create-pkg-json.js",
    "build:deno": "TARGET=deno vite build",
    "build:types": "tsc --outDir dist && tsc -p tsconfig.prod.json --outDir dist/node",
    "build": "rm -rf dist && pnpm /^build:/"
  },
  "keywords": [],
  "author": "Gerald <gera2ld@live.com>",
  "license": "ISC",
  "exports": {
    "./*": {
      "types": "./types/*.d.ts",
      "default": "./dist/*.js"
    },
    "./browser/*": {
      "types": "./types/*.d.ts",
      "default": "./dist/browser/*.js"
    },
    "./deno/*": {
      "types": "./types/*.d.ts",
      "default": "./dist/deno/*.js"
    }
  },
  "dependencies": {
    "@shikijs/markdown-it": "^3.20.0",
    "dayjs": "^1.11.19",
    "emoji-js": "^3.9.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-ins": "^4.0.0",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-sub": "^2.0.0",
    "markdown-it-sup": "^2.0.0",
    "shiki": "^3.20.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-syntax-typescript": "^7.27.1",
    "@gera2ld/common": "gitlab:gera2ld/libs#pkg/@gera2ld/common",
    "@types/emoji-js": "^3.5.2",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.0.3",
    "@types/webfontloader": "^1.6.38",
    "@unocss/runtime": "^66.5.12",
    "es-toolkit": "^1.43.0",
    "globby": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mermaid": "^11.12.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vega": "^6.2.0",
    "vega-embed": "^7.1.0",
    "vega-lite": "^6.4.1",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "webfontloader": "^1.6.28"
  },
  "lint-staged": {
    "src/**": "prettier --write"
  }
}
